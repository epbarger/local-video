.row
  .col-sm-9
    - if @user.lat.blank? || @user.lng.blank?
      = link_to 'Fetch Lat Lng', '#', class: 'btn btn-primary', id: 'fetchLatLng'
    - else
      .main-video-header
        %span.h4.bg-danger.location-header
          video from #{@user.lat.round(2)}, #{@user.lng.round(2)}
        %span.location-refresh.pull-right
          =image_tag 'ajax-loader.gif', id: 'refresh-location-img', class: 'hide'
          %small= link_to 'refresh', '#', id: 'fetchLatLng', class: 'btn btn-danger btn-xs'
      .main-videos
        - @videos.each do |video|
          = render partial: 'show', locals: {video: video}
  .col-sm-3.right-border
    .video-sidebar
      .main-video-header
        %span.h4.bg-danger.location-header.text-right 
          #{@previous_user.lat.round(2)}, #{@previous_user.lng.round(2)}
        %span.pull-right
          %small= link_to 'random', '#', id: 'getRandom', class: 'btn btn-danger btn-xs'
      - @previous_user.videos.each do |video|
        = render partial: 'show_sidebar', locals: {video: video}